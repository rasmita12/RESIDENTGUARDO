<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linn"
    android:background="@color/White">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="@color/colorPrimary">
    </android.support.v7.widget.Toolbar>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/camera"
            android:layout_marginTop="50dp"
            android:layout_above="@+id/register_submit">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@mipmap/ic_camera_black_24dp"
                android:backgroundTint="@color/colorPrimary"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/profile_image">
            <RelativeLayout
                android:id="@+id/rel_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                >

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_username"
                    android:hint="Username"
                    android:singleLine="true"
                    android:inputType="textPersonName"
                    app:met_floatingLabelTextColor="@android:color/black"
                    app:met_floatingLabel="highlight"
                    app:met_errorColor="@android:color/holo_red_dark"
                    app:met_iconPadding="0dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/White"
                    android:textColorHint="@color/White"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/custom_edit_text"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_password"
                    android:hint="Password"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:inputType="textPassword"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/et_username"
                    android:background="@drawable/custom_edit_text"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_confirm_password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:maxLength="10"
                    android:hint="Confirm Password"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/et_password"
                    android:background="@drawable/custom_edit_text"/>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_flat_name"
                    android:inputType="text"
                    android:layout_below="@+id/et_confirm_password"
                    android:layout_marginTop="30dp"
                    android:hint="Appartment Name"
                    android:background="@drawable/custom_edit_text"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_email"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/et_flat_name"
                android:layout_marginTop="30dp"
                android:hint="Email"
                android:background="@drawable/custom_edit_text"/>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_mobile"
                android:singleLine="true"
                android:maxLength="10"
                android:layout_below="@+id/et_email"
                android:layout_marginTop="30dp"
                android:hint="Flat Name"
                android:background="@drawable/custom_edit_text"/>
            </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:id="@+id/register_submit"
        android:text="REGISTER"
        android:textColor="@color/White"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>
